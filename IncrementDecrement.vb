Public Sub Increment(ByRef value_to_increment as variant, Optional l_plus As double = 1)
    
    value_to_increment = value_to_increment + l_plus

End Sub

Public Sub Decrement(ByRef value_to_decrement as variant, Optional l_minus As double = 1)

    value_to_decrement = value_to_decrement - l_minus

End Sub